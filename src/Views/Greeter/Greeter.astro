---
import DiscordSidebar from "@/components/DiscordSidebar/DiscordSidebar.astro";
import styles from "./Greeter.module.css";
---

<section
	class="px-4 sm:px-16 bg-[url('/bg.jpg')] bg-no-repeat bg-cover bg-center bg-fixed bg-blend-multiply bg-gray-700 w-full min-h-screen min-h-screen-100% "
	transition:animate="slide"
	style={styles.greeter}
	data-aos="fade-down"
>
	<div class="lg:pb-28 lg:py-0 py-50">
		<div class="flex flex-wrap gap-28 justify-center items-center min-h-screen min-h-screen-100%">
			<div class="">
				<div class="flex flex-col gap-2">
					<h2 class="lg:text-5xl font-semibold text-xl sm:text-3xl">Hello World!</h2>
					<h1 class="lg:text-6xl font-bold text-2xl sm:text-4xl">
						My name is <span
							class="font-bold bg-gradient-to-r from-blue-600 via-cyan-500 to-indigo-500 bg-clip-text text-transparent transition duration-300 ease-in-out transform hover:scale-110"
						>
							Adel Gannem
						</span>
					</h1>
					<h3 class="text-3xl font-semibold">Fullstack Developer</h3>
				</div>

				<p class="prose prose-invert pt-10 lg:w-[800px] w-[200px] sm:w-[400px] text-lg font-light">
					Fullstack Developer with a passion for building beautiful and functional websites. ...
				</p>
				<button
					class="hover:cursor-pointer hover:bg-gray-800 bg-gray-900 mt-10 rounded-sm font-light p-4"
					>Download CV</button
				>
			</div>
			<DiscordSidebar />
		</div>
	</div>
</section>
